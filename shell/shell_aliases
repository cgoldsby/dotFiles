# Terminal
alias ll='ls -FGlAhp'                       # Preferred 'ls' implementation
alias cd..='cd ../'                         # Go back 1 directory level (for fast typers)
alias ..='cd ../'                           # Go back 1 directory level
alias ~="cd ~"                              # ~:	Go Home
alias c='clear'                             # c:	Clear terminal display

# Git
alias prune='git branch --merged | grep -v "\*" | xargs -n 1 git branch -d'     # Prune merged branches

# Development
alias nuke='rm -rf ~/Library/Developer/Xcode/DerivedData/ ; echo "Successfully cleared Derived Data ‚ôªÔ∏è "'	 # Clean derived data
alias ws='open *.xcworkspace'			    		# Open All Xcode workspaces in directory
alias sources='cd ~/Sources'		# Navigate to Sources directory
alias dotfiles='cd ~/Sources/dotfiles' 	# Navigation to dotfiles project
alias xcpinstall='bundle install ; bundle exec pod install ; ws ; echo "üöÄ"'	# Common install comands for Xcode projects
alias be="bundle exec "
alias xcpi='xcpinstall'
